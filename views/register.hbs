
<div class="login">
<div class="login_image">
    <img src="{{image}}" alt="">
</div>
<div class="login_container">
<div class="h-3">Register</div>



    <form class="login_form" method="POST" action="/user/register">
          <div class="login_form_field">
        <label class="h-4" for="Email">Name</label>
        <input name="Name" value={{values.Name}}>        
        </div>
        {{#if errors.Name}}
            <p style="color: red; text-align:left;" class="h-6 mt-s mb-s">{{errors.Name}}</p>
        {{/if}}
        <div class="login_form_field">
        <label class="h-4" for="Email">Email</label>
        <input  name="Email" value={{values.Email}}>   
        </div>
          {{#if errors.Email}}
            <p style="color: red; text-align:left;" class="h-6 mt-s mb-s">{{errors.Email}}</p>
        {{/if}}   
        <div class="login_form_field">
        <label class="h-4" for="Password">Password</label>
        <input type="password" name="Password" value={{values.Password}}>        
        </div>
          {{#if errors.Password}}
            <p style="color: red; text-align:left;" class="h-6 mt-s mb-s">{{errors.Password}}</p>
        {{/if}}
        <button type="submit" class="mt-l t-w100 btn btn--white">Register</button>
    </form>

</div>

</div>
