<div class="movie_hero">

    <div class="movie_hero_image" style="background-image: url({{img_l}});">
        <div class="h-3 movie_name">
            {{#each (splittingBySpace name)}}
            <div class="h-3 movie_word">{{#each (splitting this)}}
                <span class="movie_char">{{this}}</span>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="movie_details">

        <div class="purchasemovie">
            <img src={{img_s}} alt="">
            {{#if featured}}
            <div class="featured_tag">
            </div>
            {{/if}}

            <a class="btn btn-white mt-m" href="#">Buy ${{buy}}</a>
            <a class="btn btn-white mt-m" href="#">Rent ${{rent}}</a>
        </div>


        <div class="movie_info">

            {{!-- <div class="h-3">Genre: {{}}</div> --}}
            {{!-- <div class="h-3">Rating: {{rating}}</div> --}}
            <h3 class="h-3">Rating: {{rating}}%</h3>
            <h3 class="h-3">Genre: ......</h3>
            <div class="h-3">Year: ........</div>
            <div class="h-3">Runtime: ........</div>
            <div class="h-3">Rated: PG-13</div>
            <br>
            <div class="h-3">Synopsis:</div>
            <h3 class="h-3">{{synopsis}}</h3>
            {{!-- <h1 class="h-2">{{category}}</h1> --}}
        </div>
    </div>
    <div class="cast">
      <div class="h-2">Cast: .........</div>
      </div>
</div>

{{>footer}}

<script type="module" defer src="/js/effects.js"></script>